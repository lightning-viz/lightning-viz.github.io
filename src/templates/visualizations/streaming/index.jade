extends ../../layout


block content

    .top.bar


    .documentation-container
        .row
            .column-3.hidden-mobile.overview-container
                - var section = 'streaming'
                include ../../includes/visualizations/sidebar

            //- .column-1
            .column-3.hidden-mobile.empty-container
            .column-7.mobile-column-3.details-container
                header            
                    .row
                        .column-12
                            .row.header
                                .column-1.mobile-column-1
                                    img(src="/images/logo.png")

                                .column-10.mobile-column-3
                                    h1
                                        | Lightning

                                    | DATA VISUALIZATION SERVER


                section(name="introduction")
                    .row
                        .column-12
                                a(name="visualizations", href="#visualizations")
                                    h2
                                        | Visualizations
                



                section(name="streaming")
                    .row
                        .column-12
                                a(name="streaming", href="#streaming")
                                    h2
                                        | Streaming



                                a(name="line", href="#line")
                                    h4
                                        | Streaming Line

                                #line-streaming(line-data-streaming)


                                .tab-container
                                    ul
                                        li
                                            a(href="#line-streaming-data-tab")
                                                | Data Structure
                                        li
                                            a(href="#line-streaming-python-tab")
                                                | Python Example

                                    .content-container

                                        #line-streaming-data-tab
                                            pre
                                                code.
                                                    data = {
                                                        "series": [[0, 10, ...], [0, 20, ...], ...] or [0, 10, 20, â€¦]
                                                        "axis": [0, 1, ...]
                                                        "color": [[r0,g0,b0], [r1,g1,b1], ...]
                                                        "label": [l0, l1, ...]
                                                        "size": [s0, s1, ...]
                                                    }

                                        #line-streaming-python-tab

                                            pre
                                                code.python.
                                                    from numpy import random

                                                    # initialize with zeros
                                                    viz = lgn.linestreaming([0, 0, 0])

                                                    while True:
                                                        # append a random entry
                                                        viz.append([random.rand() * 20 - 10])
                                                        sleep(1)

                                a(name="scatter", href="#scatter")
                                    h4
                                        | Streaming Scatter

                                #scatter-streaming(scatter-data-streaming)


                                .tab-container
                                    ul
                                        li
                                            a(href="#scatter-streaming-data-tab")
                                                | Data Structure
                                        li
                                            a(href="#scatter-streaming-python-tab")
                                                | Python Example

                                    .content-container

                                        #scatter-streaming-data-tab
                                            pre
                                                code.
                                                    data = {
                                                        "points": [[x0,y0], [x1,y1], ... ]
                                                        "color": [[r0,g0,b0], [10,20,0], ...]
                                                        "label": [l0, l1, ...]
                                                        "size": [s0, s1, ...]
                                                    }

                                        #scatter-streaming-python-tab

                                            pre
                                                code.python.
                                                    from numpy import random

                                                    # initialize with random points
                                                    viz = lgn.scatterstreaming(random.rand(10),random.rand(10), label=0)

                                                    while True:
                                                        # append random points with random labels
                                                        l = (random.rand(10)*5).astype('int')
                                                        viz.append(random.rand(10), random.rand(10), label=l)
                                                        sleep(1)

                section(name="plots")
                    .row
                        .column-12
                                a(name="plots", href="/visualizations")
                                    h2
                                        | Plots
                                
                                a(href="/visualizations")
                                    h4
                                        | Click to view plot-based visualizations

                section(name="images")
                    .row
                        .column-12
                                a(name="images", href="/visualizations/images")
                                    h2
                                        | Images

                                a(href="/visualizations/images")
                                    h4
                                        | Click to view image-based visualizations


                section(name="3d")
                    .row
                        .column-12
                                a(name="3d", href="/visualizations/3d")
                                    h2
                                        | 3D

                                a(href="/visualizations/3d")
                                    h4
                                        | Click to view 3d visualizations

                                

    .bottom.bar.visible-mobile