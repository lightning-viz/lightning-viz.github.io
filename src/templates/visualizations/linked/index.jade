                                                code.
                                                    {
                                                        "points": [[x0,y0], [x1,y1], ... ]
                                                        "series": [[0, 10, ...], [0, 20, ...], ...] or [0, 10, 20, â€¦]
                                                        "alpha": [0.2, 0.9, ...]
                                                        "color": [[r0,g0,b0], [10,20,0], ...]
                                                        "label": [l0, l1, ...]
                                                        "size": [s0, s1, ...]
                                                    }


                                        #scatter-line-python-tab

                                            pre
                                                code.
                                                    x = random.randn(20)
                                                    y = random.randn(20)
                                                    ts = gaussian_filter(random.rand(20,100), [0, 3])
                                                    s = std(ts, axis=1)*200
                                                    l = (random.rand(20)*5).astype('int')
                                                    
                                                    lgn.scatterline(x, y, ts, label=l, size=s)


